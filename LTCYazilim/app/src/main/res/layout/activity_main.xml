<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ltcLogo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/textLTC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="28dp"
        android:text="LTC"
        android:textColor="#888E8E"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ltcLogo" />

    <TextView
        android:id="@+id/textYazilim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:text="YAZILIM"
        android:textColor="#EB076161"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/textLTC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textLTC"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butonOperatör"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Operatör Girişi"
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ltcLogo" />

    <Button
        android:id="@+id/butonTeknik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=" Teknik Servis "
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="@id/butonOperatör"
        app:layout_constraintRight_toRightOf="@id/butonOperatör"
        app:layout_constraintStart_toStartOf="@id/butonOperatör"
        app:layout_constraintTop_toBottomOf="@id/butonOperatör" />

    <Button
        android:id="@+id/butonYonetici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yönetici Girişi "
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        android:textSize="22dp"
        app:layout_constraintLeft_toLeftOf="@id/butonTeknik"
        app:layout_constraintRight_toRightOf="@id/butonTeknik"
        app:layout_constraintStart_toStartOf="@id/butonTeknik"
        app:layout_constraintTop_toBottomOf="@id/butonTeknik" />

</androidx.constraintlayout.widget.ConstraintLayout>